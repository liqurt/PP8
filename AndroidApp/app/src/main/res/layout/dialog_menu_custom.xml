<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView5"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="온도"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/hot"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hot"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:text="HOT" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ice"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:text="ICE" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="사이즈"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/btnCat_sizeS"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_sizeS"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="S" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_sizeM"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="M" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_sizeL"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="L" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="샷 추가"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/btnCat_shot0"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_shot0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_shot1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_shot2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_shot3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="3" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="얼음"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_Ice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/btnCat_iceNo"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_iceNo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="없이" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_iceLess"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="적게" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_iceReg"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="보통" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_iceMore"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:text="많이" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="휘핑크림"
            android:textSize="15dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_whip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/btnCat_noWhip"
            app:layout_constraintLeft_toRightOf="@+id/textView9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_noWhip"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="추가안함"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_regWhip"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="일반휘핑"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_essWhip"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="에스프레소"
                android:textSize="8sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="드리즐"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnsCategory_drizzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="20dp"
            app:checkedButton="@id/btnCat_noDrizzle"
            app:layout_constraintLeft_toRightOf="@+id/textView10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_noDrizzle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="추가안함"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_caramelDrizzle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="카라멜" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCat_chocoDrizzle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="초코" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

